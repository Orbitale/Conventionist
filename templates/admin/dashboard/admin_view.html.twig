                <i class="fa fa-{{ icon }}"></i>
            </div>
        </div>
        <h2>
            {{ title|trans }}
        </h2>
        <p>
            {{ text|trans|raw }}
        </p>
        <a href="{{ cta_path }}" class="btn btn-secondary">
            <i class="fa fa-arrow-right"></i>Â {{ cta_title|trans }}
