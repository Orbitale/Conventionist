{% extends 'admin/admin_minimal.html.twig' %}

{% form_theme registrationForm '@EasyAdmin/symfony-form-themes/bootstrap_5_layout.html.twig' %}

{% block page_title 'register'|trans %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>{{ 'register'|trans }}</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.username) }}

        {{ form_row(registrationForm.email) }}

        {{ form_row(registrationForm.plainPassword) }}

        {{ form_row(registrationForm.roles) }}

        {#{ form_row(registrationForm.agreeTerms) }#}

        <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>

    {{ form_end(registrationForm) }}

    <br>
    <p class="mt-3">
        {{ 'have_account_login'|trans({'%path%': path('login')})|raw }}
    </p>

{% endblock %}
